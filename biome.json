{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.ts",
			"src/**/*.js",
			"packages/**/*.ts",
			"packages/**/*.js",
			"packages/**/*.tsx",
			"packages/**/*.jsx",
			"examples/**/*.ts",
			"examples/**/*.js",
			"**/package.json",
			"**/tsconfig.json",
			"**/tsdown.config.ts",
			"vitest.config.ts",
			"!**/*.gen.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noForEach": "off"
			},
			"correctness": {
				"noInnerDeclarations": "off",
				"noUndeclaredDependencies": "off",
				"noUnusedFunctionParameters": "off",
				"noUnusedPrivateClassMembers": "off",
				"useHookAtTopLevel": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off",
				"noBarrelFile": "off",
				"noReExportAll": "off"
			},
			"style": {
				"noInferrableTypes": "error",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"useAsConstAssertion": "error",
				"useBlockStatements": "off",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useExplicitLengthCheck": "off",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noConsole": {
					"level": "error",
					"options": {
						"allow": ["error", "info", "warn"]
					}
				},
				"noExplicitAny": "off",
				"noVar": "off"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": false
	}
}
