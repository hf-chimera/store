{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": [
			"src/**/*.ts",
			"src/**/*.js",
			"test/**/*.ts",
			"test/**/*.js",
			"package.json",
			"tsconfig.json",
			"tsup.config.ts"
		],
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"lineEnding": "lf",
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"complexity": {
				"noForEach": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off",
				"noBarrelFile": "off"
			},
			"correctness": {
				"useHookAtTopLevel": "off",
				"noUndeclaredDependencies": "off"
			},
			"suspicious": {
				"noConsole": {
					"options": {
						"allow": [
							"error",
							"info",
							"warn"
						]
					},
					"level": "error"
				},
				"noConsoleLog": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"useExplicitLengthCheck": "off",
				"useBlockStatements": "off",
				"useNamingConvention": {
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"conventions": [
							{
								"selector": {
									"kind": "objectLiteralMember"
								},
								"match": ".*"
							}
						]
					},
					"level": "error"
				}
			}
		}
	}
}
