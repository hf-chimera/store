{
	"author": "hewston",
	"description": "Cross-end reactivity API - Monorepo",
	"license": "MIT",
	"type": "module",
	"private": true,
	"bugs": {
		"url": "https://github.com/hf-chimera/store/issues"
	},
	"repository": {
		"url": "https://github.com/hf-chimera/store"
	},
	"packageManager": "pnpm@10.20.0",
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@changesets/cli": "2.29.8",
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"@vitest/coverage-v8": "4.0.17",
		"@vitest/ui": "4.0.17",
		"husky": "9.1.7",
		"react": "16.8.0",
		"@types/react": "16.8.0",
		"vue": "3.0.0",
		"tsdown": "0.19.0",
		"typescript": "5.9.3",
		"vitest": "4.0.17"
	},
	"scripts": {
		"build:store": "pnpm --filter @hf-chimera/store build",
		"build:qb": "pnpm --filter @hf-chimera/query-builder build",
		"build:shared": "pnpm --filter @hf-chimera/adapters-shared build",
		"build:react": "pnpm --filter @hf-chimera/react build",
		"build:vue": "pnpm --filter @hf-chimera/vue build",
		"build:all": "pnpm build:store && pnpm build:qb && pnpm build:shared && pnpm build:react && pnpm build:vue",
		"build": "pnpm build:all",
		"lint": "tsc && pnpm biome check --write",
		"prepare": "husky",
		"test": "vitest run --passWithNoTests",
		"test:coverage": "vitest --ui --coverage.enabled --coverage.all",
		"add-patches": "node scripts/add-patches.mjs",
		"changeset:minor": "node scripts/changeset-minor.mjs",
		"changeset:major": "node scripts/changeset-major.mjs",
		"release": "pnpm build:all && pnpm changeset publish --provenance"
	}
}
